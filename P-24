def dialog_act(sentence):
    if sentence.endswith("?"):
        return "Question"
    elif sentence.lower().startswith(("please", "could you")):
        return "Request"
    elif sentence.lower().startswith(("hi", "hello")):
        return "Greeting"
    else:
        return "Statement"
dialog = [
    "Hello there",
    "How are you?",
    "Please help me",
    "I am learning NLP"
]
for line in dialog:
    print(line, "â†’", dialog_act(line))
