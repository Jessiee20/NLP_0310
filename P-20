from sklearn.feature_extraction.text import TfidfVectorizer
from sklearn.metrics.pairwise import cosine_similarity
documents = [
    "I love natural language processing",
    "NLP is used in artificial intelligence",
    "Machine learning and NLP are related"
]
query = ["natural language"]
vectorizer = TfidfVectorizer()
tfidf_matrix = vectorizer.fit_transform(documents + query)
similarity = cosine_similarity(tfidf_matrix[-1], tfidf_matrix[:-1])
print("Document Ranking (Highest similarity first):")
for index, score in sorted(enumerate(similarity[0]), key=lambda x: x[1], reverse=True):
    print(f"Document {index+1} â†’ Score: {score:.3f}")
