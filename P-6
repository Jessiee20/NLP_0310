import random
from collections import defaultdict
text = "I love NLP and I love Python"
words = text.split()
bigrams = defaultdict(list)
for i in range(len(words) - 1):
    bigrams[words[i]].append(words[i + 1])
def generate_text(start_word, length=10):
    current = start_word
    result = [current]
    for _ in range(length - 1):
        if current in bigrams:
            current = random.choice(bigrams[current])
            result.append(current)
        else:
            break

    return " ".join(result)
print("Generated Text:")
print(generate_text("I", 8))
